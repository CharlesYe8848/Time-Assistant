{
    "manifest_version": 3,
    "name": "时间助手",
    "version": "0.10.14",
    "description": "记住那些人生重要的时刻",
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": [
            "plugins/tags.js",
            "plugins/add.js",
            "plugins/flatpickr.js",
            "plugins/jquery-3.7.1.min.js"
        ],
        "run_at": "document_end"
    }],
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icon.png"
        }
    },
    "permissions": ["storage", "activeTab", "notifications", "scripting"]
}